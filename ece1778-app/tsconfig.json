{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@app/*":["./*"],
      "@styles/*":["./styles/*"],      
      "@components/*":["./components/*"],
      "@constants/*":["./constants/*"],
      "@assets/*":["./assets/*"],
      "@contexts/*":["./contexts/*"],
      "@lib/*":["./lib/*"],
      "@storage/*":["./storage/*"],
      "@features/*":["./features/*"],
      "@store/*":["./store/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
